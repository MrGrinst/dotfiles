  "snippets.userSnippetsDirectory": "~/Developer/dotfiles/cl-config/vim/snippets",
  "coc.source.iced.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "yarn",
  "eslint.format.enable": true,
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": [
        "-i",
        "2",
        "-bn",
        "-ci",
        "-sr"
      ]
    }
  },
  "go.goplsOptions": {
    "gofumpt": true
  },
  "git.diffRevision": "HEAD",
  "coc.preferences.jumpCommand": "tab drop",
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "ruby",
    "elixir",
    "javascript",
    "html",
    "svelte",
    "go"
  ],
  "refactor.openCommand": "tab drop",
  "list.previewSplitRight": true,
  "coc.preferences.listOfWorkspaceEdit": "location",
  "elixirLS.dialyzerWarnOpts": ["error_handling", "underspecs", "unknown", "unmatched_returns"],
  "elixirLS.suggestSpecs": true,
  "elixirLS.dialyzerFormat": "dialyxir_short",
  "elixirLS.fetchDeps": true,
  "elixir.trace.server": "verbose",
  "npm.binPath": "~/.asdf/installs/nodejs/16.13.1/bin/npm",
  "svelte.enable-ts-plugin": true
}
