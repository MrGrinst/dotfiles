{
  "languageserver": {
    "tailwind-lsp": {
      "command": "tailwindcss-language-server",
      "args": ["--stdio"],
      "filetypes": [
        "javascript",
        "javascriptreact",
        "svelte",
        "typescript",
        "typescriptreact"
      ],
      "rootPatterns": [
        "tailwind.config.js",
        "tailwind.config.ts",
        "postcss.config.js",
        "postcss.config.ts",
        "package.json",
        "node_modules",
        ".git"
      ],
      "settings": {
        "tailwindCSS": {
          "validate": true,
          "lint": {
            "cssConflict": "warning",
            "invalidApply": "error",
            "invalidScreen": "error",
            "invalidVariant": "error",
            "invalidConfigPath": "error",
            "invalidTailwindDirective": "error",
            "recommendedVariantOrder": "warning"
          },
          "classAttributes": ["class", "className", "classList", "ngClass"],
          "experimental": {}
        }
      }
    }
  },
  "snippets.userSnippetsDirectory": "~/Developer/dotfiles/cl-config/vim/snippets",
  "coc.source.iced.enable": true,
  "prettier.eslintIntegration": true,
  "prettier.onlyUseLocalVersion": true,
  "prettier.disableSuccessMessage": true,
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt",
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": [
        "-i",
        "2",
        "-bn",
        "-ci",
        "-sr"
      ]
    },
  },
  "go.goplsOptions": {
    "gofumpt": true
  },
  "git.diffRevision": "HEAD",
  "coc.preferences.jumpCommand": "tab drop",
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "ruby",
    "elixir",
    "javascript",
    "html",
    "svelte",
    "go"
  ],
  "refactor.openCommand": "tab drop",
  "list.previewSplitRight": true,
  "coc.preferences.listOfWorkspaceEdit": "location",
  "explorer.git.enable": false,
  "explorer.file.showHiddenFiles": true,
  "explorer.previewAction.onHover": false,
  "explorer.filename.colored.enable": false,
  "explorer.openAction.for.directory": "",
  "explorer.file.tabCD": false,
  "explorer.keyMappings.global": {
    "<cr>": [
      "expandable?",
      [
        "expanded?",
        "collapse",
        "expand"
      ],
      "open"
    ],
    "<C-f>": "searchRecursive"
  },
  "explorer.sources": [
    {
      "name": "file",
      "expand": true
    }
  ],
  "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5][size]",
  "elixirLS.dialyzerWarnOpts": ["error_handling", "underspecs", "unknown", "unmatched_returns"],
  "elixirLS.suggestSpecs": true,
  "elixirLS.dialyzerFormat": "dialyxir_short",
  "elixirLS.fetchDeps": true,
  "elixir.trace.server": "verbose",
  "npm.binPath": "~/.nodenv/versions/16.13.1/bin/npm",
  "svelte.enable-ts-plugin": true
}
