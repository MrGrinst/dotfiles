[user]
    email = kyle@kylegrinstead.com
    name = Kyle Grinstead
[push]
    default = current
[core]
    excludesfile = ~/.gitignore_global
    autocrlf = input
    editor = nvim
    pager = diff-so-fancy | less --tabs=4 -RFX
[pull]
    rebase = true
[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    d = diff -w
    latest = "!f() { if git diff-index --quiet HEAD --; then git checkout master && git reset --hard origin/master && git pull origin master; else echo 'Take care of uncommitted changes then try again.'; fi; }; f"
    edit = "!f() { git rebase -i $1~; }; f"
    search-commit = "!f() { git log $1 --pickaxe-regex --format=oneline -p -1 --color-words -S\"$2\"; }; f"
    rl = "!f() { git reflog --pretty='%h %gs' | tail -r | awk '!/^.* (reset|checkout)/ { print }'; }; f"
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE
[include]
    path = ~/.gitconfig.local
[log]
    decorate = true
[stash]
    showPatch = true
[status]
    showUntrackedFiles = all
[advice]
    detachedHead = false
